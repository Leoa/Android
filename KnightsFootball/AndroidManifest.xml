<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.itnoles.knightfootball"
	android:versionCode="1"
	android:versionName="1.0.0"
	android:installLocation="auto">

	<uses-sdk android:minSdkVersion="7" android:targetSdkVersion="15" />

	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

	<application android:label="@string/app_name"
	             android:icon="@drawable/icon"
	             android:theme="@style/Theme.Sherlock">
		<activity android:name=".activities.MainActivity" android:label="@string/app_name" android:noHistory="true">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>

		<activity android:name=".activities.TabbedActivity" />
		<activity android:name=".activities.LegacySettingsActivity" android:label="@string/settings" />
		<activity android:name=".activities.GeneralSettings" />
		<activity android:name="com.itnoles.shared.activities.WebDetailsActivity" />
		<activity android:name="com.itnoles.shared.activities.AboutSettings" />
		<activity android:name="com.itnoles.shared.activities.ScheduleActivity" />
		<activity android:name="com.itnoles.shared.activities.StaffActivity" />
		<activity android:name=".activities.ModernSettingsActivity" android:label="@string/settings" />

		<service android:name=".service.SyncService" />
		<receiver android:name=".receiver.ConnectivityChangedReceiver" enabled="false">
		    <intent-filter>
		        <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
		    </intent-filter>
		</receiver>
		
		<provider android:authorities="com.itnoles.shared.provider.sports"
			      android:name="com.itnoles.shared.provider.ScheduleProvider"
			      android:exported="false" />
        <!--<meta-data android:name="com.google.android.backup.api_key" android:value="@string/backup_manager_key" />-->
	</application>
</manifest>